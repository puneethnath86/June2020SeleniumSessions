<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="My Social Media Test Suite" thread-count="3" parallel="tests" verbose="4">
	
	<test name="google test - chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="app.test.GoogleTest" />
		</classes>
	</test>
	
	<test name="fresh works test - chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="app.test.FreshWorksTest" />
		</classes>
	</test>

	<test name="rediff mail test - chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="app.test.RediffTest" />
		</classes>
	</test>
	
	
	
	<test name="google test - firefox">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="app.test.GoogleTest" />
		</classes>
	</test>
	<test name="fresh works test - firefox">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="app.test.FreshWorksTest" />
		</classes>
	</test>

	<test name="rediff mail test - firefox">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="app.test.RediffTest" />
		</classes>
	</test>

</suite>